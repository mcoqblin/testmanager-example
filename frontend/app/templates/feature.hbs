<div class="navigation">{{#link-to "features"}}Features{{/link-to}} &gt; {{trim-name model.name size=40}}</div>

<div class="title">{{trim-name model.name size=80}}</div>

<button type="button" class="create-button" onclick={{action "onCreateTest"}}>Create a Test</button>

{{log-window}}

{{component dialogComponent onConfirm=(action dialogAction)}}

<div class="list">
{{#if model.tests}}
<table>
<tr>
    <th>Test name</th>
    <th>Status</th>
    <th>Actions</th>
</tr>
{{#each model.tests as |test|}}
<tr class={{test.cssForStatus}}>
    <td>{{trim-name test.name}}</td>
    <td>{{test-status
        id=test.id
        status=test.validStatus
        onTestStatusChanged=(action "onTestStatusChanged")}}</td>
    <td>
        <button type="button" class="action-button" onclick={{action "onRenameTest" test.id}}>Rename</button>
        <button type="button" class="action-button" onclick={{action "onDeleteTest" test.id}}>Delete</button>
    </td>
</tr>
{{/each}}
</table>
{{else}}
<div class="no-content">This feature contains no tests.</div>
{{/if}}
</div>

{{outlet}}