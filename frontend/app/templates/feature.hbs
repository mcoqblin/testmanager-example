<div class="navigation">{{#link-to "features"}}Features{{/link-to}} &gt; {{model.name}}</div>

<div class="title">{{model.name}}</div>

<input type="button" value="Create Test" class="create-button" onclick={{action "onCreateTest" model.id ""}}>

<div class="list">
{{#if model}}
<table>
<tr>
    <th>Test name</th>
    <th>Status</th>
    <th>Actions</th>
</tr>
{{#each model.tests as |test|}}
<tr class={{test.cssForStatus}}>
    <td>{{test.name}}</td>
    <td>{{test-status
        id=test.id
        status=test.validStatus
        onTestStatusChanged=(action "onTestStatusChanged")}}</td>
    <td>
        <input type="button" value="Rename" class="action-button" onclick={{action "onRenameTest" test.id test.name}}>
        <input type="button" value="Delete" class="action-button" onclick={{action "onDeleteTest" test.id}}>
    </td>
</tr>
{{/each}}
</table>
{{else}}
    This feature contains no tests.
{{/if}}
</div>

{{outlet}}